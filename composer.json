{
    "name": "santanamic/php-latamgateway-sdk",
    "description": "PHP SDK for integration with the Latam Gateway Payment API",
    "type": "library",
    "keywords": [
        "Latam Gateway",
        "LatamGateway",
        "php",
        "sdk",
        "api",
        "e-commerce",
        "payments",
		"credtcard",
		"boleto",
		"deposit"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": { "LatamGateway\\" : "src/LatamGateway" }
    },
    "scripts": {
		"lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix"
    }
}